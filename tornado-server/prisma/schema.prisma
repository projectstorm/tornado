datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  Bytes
  salt          String
  conceptBoards ConceptBoard[]
}

model ConceptBoard {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  user      User @relation(fields: [userId], references: [id])
  userId    Int
}
